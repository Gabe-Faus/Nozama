model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  isAdmin   Boolean?    @default(false)
  reviews   Reviews[]
  favoritos Favoritos[]
  name          String?
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  sessions      Session[]
}

model Category {
  id         Int                   @id @default(autoincrement())
  name       String                @unique
  products   Product[]
  attributes Category_Attributes[]
}

model Category_Attributes {
  id          Int                 @id @default(autoincrement())
  category_id Int
  name        String
  type        String?
  category    Category            @relation(fields: [category_id], references: [id])
  reviewAttrs Review_Attributes[]
}

model Product {
  id             Int         @id @default(autoincrement())
  name           String
  description    String?
  evaluation_avg Float
  photo          String
  category_id    Int
  category       Category    @relation(fields: [category_id], references: [id])
  reviews        Reviews[]
  favoritos      Favoritos[]
}

model Reviews {
  user_id      Int
  product_id   Int
  evaluation   Int
  comment      String?
  truthfull    Boolean
  photo_review String?
  user         User                @relation(fields: [user_id], references: [id])
  product      Product             @relation(fields: [product_id], references: [id])
  attributes   Review_Attributes[]

  @@id([user_id, product_id]) // chave prim√°ria composta
}

model Review_Attributes {
  review_user_id    Int
  review_product_id Int
  attribute_id      Int
  value             String
  review            Reviews             @relation(fields: [review_user_id, review_product_id], references: [user_id, product_id])
  attribute         Category_Attributes @relation(fields: [attribute_id], references: [id])

  @@id([review_user_id, review_product_id, attribute_id])
}

model Favoritos {
  user_id    Int
  product_id Int
  user       User    @relation(fields: [user_id], references: [id])
  product    Product @relation(fields: [product_id], references: [id])

  @@id([user_id, product_id])
}
